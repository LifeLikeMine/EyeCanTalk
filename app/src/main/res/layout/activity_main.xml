<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <TextureView
        android:id="@+id/preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <View
        android:id="@+id/view_warning_tracking"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/red_border_line"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eye Can Talk"
        android:textSize="30sp"
        app:layout_constraintVertical_bias="0.4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/layout_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/textView">

    <Button
        android:id="@+id/btn_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:text="의사소통하기"
        android:layout_marginTop="10dp"
        tools:layout_editor_absoluteX="20dp" />

    <Button
        android:id="@+id/btn_traking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:text="아이트래킹"
        android:layout_marginTop="10dp"
        tools:layout_editor_absoluteX="20dp"/>

    <Button
        android:id="@+id/btn_demo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:text="데모 버전"
        android:layout_marginTop="10dp"
        tools:layout_editor_absoluteX="20dp"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="설정"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/img_setting"
        app:layout_constraintStart_toStartOf="@+id/img_setting"
        app:layout_constraintTop_toBottomOf="@+id/img_setting" />

    <ImageView
        android:id="@+id/img_setting"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/baseline_settings_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_login"
        app:layout_constraintTop_toBottomOf="@+id/layout_btn"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="로그인"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/img_login"
        app:layout_constraintStart_toStartOf="@+id/img_login"
        app:layout_constraintTop_toBottomOf="@+id/img_login" />

    <ImageView
        android:id="@+id/img_login"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/baseline_login_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/img_setting"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_btn"/>

    <!-- 시선 좌표 -->

    <com.example.library.PointView
        android:id="@+id/view_point"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <!-- 캘리브레이션 뷰 -->

    <com.example.library.CalibrationViewer
        android:id="@+id/view_calibration"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible">

        <com.example.library.GazePathView
            android:id="@+id/gazePathView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </com.example.library.CalibrationViewer>

    <include layout="@layout/layout_progress" />

</androidx.constraintlayout.widget.ConstraintLayout>